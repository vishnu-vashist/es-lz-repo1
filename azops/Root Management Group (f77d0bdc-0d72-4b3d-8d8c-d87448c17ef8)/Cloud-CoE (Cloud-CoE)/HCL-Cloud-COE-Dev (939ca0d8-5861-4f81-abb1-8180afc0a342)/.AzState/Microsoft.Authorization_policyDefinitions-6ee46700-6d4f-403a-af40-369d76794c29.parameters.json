        "Properties": {
          "Description": null,
          "DisplayName": "Adherence to OS type, versions and editions-Neetima",
          "Mode": "All",
          "Parameters": {},
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "in": [
                    "Microsoft.Compute/disks",
                    "Microsoft.Compute/virtualMachines",
                    "Microsoft.Compute/VirtualMachineScaleSets"
                  ]
