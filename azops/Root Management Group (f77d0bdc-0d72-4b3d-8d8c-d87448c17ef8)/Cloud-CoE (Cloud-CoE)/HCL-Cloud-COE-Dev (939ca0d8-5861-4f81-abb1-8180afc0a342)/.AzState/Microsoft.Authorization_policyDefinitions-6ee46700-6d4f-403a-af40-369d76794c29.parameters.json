{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "6ee46700-6d4f-403a-af40-369d76794c29",
        "ResourceId": "/subscriptions/939ca0d8-5861-4f81-abb1-8180afc0a342/providers/Microsoft.Authorization/policyDefinitions/6ee46700-6d4f-403a-af40-369d76794c29",
        "ResourceName": "6ee46700-6d4f-403a-af40-369d76794c29",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": "939ca0d8-5861-4f81-abb1-8180afc0a342",
        "PolicyDefinitionId": "/subscriptions/939ca0d8-5861-4f81-abb1-8180afc0a342/providers/Microsoft.Authorization/policyDefinitions/6ee46700-6d4f-403a-af40-369d76794c29",
        "Properties": {
          "Description": null,
          "DisplayName": "Adherence to OS type, versions and editions-Neetima",
          "Mode": "All",
          "Parameters": {
            "effect": {
              "type": "String",
              "metadata": {
                "displayName": "Effect",
                "description": "The effect determines what happens when the policy rule is evaluated to match"
              },
              "allowedValues": [
                "Audit",
                "Deny",
                "Disabled"
              ],
              "defaultValue": "Deny"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "in": [
                    "Microsoft.Compute/virtualMachines",
                    "Microsoft.Compute/VirtualMachineScaleSets"
                  ]
                },
                {
                  "allOf": [
                    {
                      "not": {
                        "allof": [
                          {
                            "field": "Microsoft.Compute/imagePublisher",
                            "in": [
                              "MicrosoftWindowsServer"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageOffer",
                            "in": [
                              "WindowsServer"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageSku",
                            "in": [
                              "2012-Datacenter",
                              "2012-R2-Datacenter",
                              "2016-Datacenter",
                              "2016-Datacenter-Server-Core",
                              "2019-Datacenter"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageVersion",
                            "in": [
                              "latest"
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "not": {
                        "allOf": [
                          {
                            "field": "Microsoft.Compute/imagePublisher",
                            "in": [
                              "RedHat"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageOffer",
                            "in": [
                              "RHEL"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageSku",
                            "in": [
                              "6.*",
                              "7*"
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "not": {
                        "allOf": [
                          {
                            "field": "Microsoft.Compute/imagePublisher",
                            "in": [
                              "SUSE"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageOffer",
                            "in": [
                              "SLES",
                              "SLES-Standard"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageSku",
                            "in": [
                              "12-SP2",
                              "12-SP3",
                              "12-SP4"
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "not": {
                        "allOf": [
                          {
                            "field": "Microsoft.Compute/imagePublisher",
                            "in": [
                              "Canonical"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageOffer",
                            "in": [
                              "UbuntuServer"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageSku",
                            "in": [
                              "14.04.0-LTS",
                              "14.04.1-LTS",
                              "14.04.5-LTS",
                              "16.04-LTS",
                              "16.04.0-LTS"
                            ]
                          }
                        ]
                      }
                    },
                    {
                      "not": {
                        "allOf": [
                          {
                            "field": "Microsoft.Compute/imagePublisher",
                            "in": [
                              "OpenLogic"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageOffer",
                            "in": [
                              "Centos",
                              "Centos-LVM"
                            ]
                          },
                          {
                            "field": "Microsoft.Compute/imageSku",
                            "in": [
                              "6.*",
                              "7*"
                            ]
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          }
        }
      }
    }
  }
}
