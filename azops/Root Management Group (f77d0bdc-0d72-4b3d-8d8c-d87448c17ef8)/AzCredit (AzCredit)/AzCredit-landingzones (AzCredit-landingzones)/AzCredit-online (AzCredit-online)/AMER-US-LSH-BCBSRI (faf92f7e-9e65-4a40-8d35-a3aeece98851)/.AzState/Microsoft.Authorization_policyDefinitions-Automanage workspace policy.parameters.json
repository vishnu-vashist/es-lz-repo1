{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "Automanage workspace policy",
        "ResourceId": "/subscriptions/faf92f7e-9e65-4a40-8d35-a3aeece98851/providers/Microsoft.Authorization/policyDefinitions/Automanage workspace policy",
        "ResourceName": "Automanage workspace policy",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": "faf92f7e-9e65-4a40-8d35-a3aeece98851",
        "PolicyDefinitionId": "/subscriptions/faf92f7e-9e65-4a40-8d35-a3aeece98851/providers/Microsoft.Authorization/policyDefinitions/Automanage workspace policy",
        "Properties": {
          "Description": "Monitors workspace and ensures the automation account is linked",
          "DisplayName": "Automanage workspace policy",
          "Mode": "All",
          "Parameters": {
            "automationAccountId": {
              "type": "String",
              "metadata": {
                "displayName": "AutomationId",
                "description": "Automation Account resource Id linked to the workspace"
              }
            }
          },
          "PolicyRule": {
            "if": {
              "anyOf": [
                {
                  "allOf": [
                    {
                      "field": "type",
                      "equals": "Microsoft.OperationalInsights/workspaces/linkedservices"
                    },
                    {
                      "anyOf": [
                        {
                          "field": "microsoft.operationalinsights/workspaces/linkedservices/resourceId",
                          "notEquals": "[parameters('automationAccountId')]"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            "then": {
              "effect": "audit"
            }
          }
        }
      }
    }
  }
}
