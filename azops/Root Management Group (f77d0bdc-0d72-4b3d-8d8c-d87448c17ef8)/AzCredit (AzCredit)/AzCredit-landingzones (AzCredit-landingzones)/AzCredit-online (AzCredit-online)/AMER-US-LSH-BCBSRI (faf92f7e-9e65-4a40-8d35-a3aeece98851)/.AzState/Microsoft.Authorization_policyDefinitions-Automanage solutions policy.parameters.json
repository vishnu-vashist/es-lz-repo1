{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "Automanage solutions policy",
        "ResourceId": "/subscriptions/faf92f7e-9e65-4a40-8d35-a3aeece98851/providers/Microsoft.Authorization/policyDefinitions/Automanage solutions policy",
        "ResourceName": "Automanage solutions policy",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": "faf92f7e-9e65-4a40-8d35-a3aeece98851",
        "PolicyDefinitionId": "/subscriptions/faf92f7e-9e65-4a40-8d35-a3aeece98851/providers/Microsoft.Authorization/policyDefinitions/Automanage solutions policy",
        "Properties": {
          "Description": "Monitors the Solution and ensures the workspace is linked",
          "DisplayName": "Automanage solutions policy",
          "Mode": "All",
          "Parameters": {
            "workspaceResourceId": {
              "type": "String",
              "metadata": {
                "displayName": "WorkspaceId",
                "description": "Workspace resource Id linked to this solution"
              }
            }
          },
          "PolicyRule": {
            "if": {
              "anyOf": [
                {
                  "allOf": [
                    {
                      "field": "type",
                      "equals": "Microsoft.OperationsManagement/solutions"
                    },
                    {
                      "anyOf": [
                        {
                          "field": "Microsoft.OperationsManagement/solutions/workspaceResourceId",
                          "notEquals": "[parameters('workspaceResourceId')]"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            "then": {
              "effect": "audit"
            }
          }
        }
      }
    }
  }
}
