{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "Audit-MachineLearning-PrivateEndpointId",
        "ResourceId": "/providers/Microsoft.Management/managementGroups/FSVinay/providers/Microsoft.Authorization/policyDefinitions/Audit-MachineLearning-PrivateEndpointId",
        "ResourceName": "Audit-MachineLearning-PrivateEndpointId",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": null,
        "PolicyDefinitionId": "/providers/Microsoft.Management/managementGroups/FSVinay/providers/Microsoft.Authorization/policyDefinitions/Audit-MachineLearning-PrivateEndpointId",
        "Properties": {
          "Description": "Audit public endpoints that are created in other subscriptions for machine learning.",
          "DisplayName": "Audit-MachineLearning-PrivateEndpointId",
          "Mode": "Indexed",
          "Parameters": {
            "effect": {
              "type": "String",
              "metadata": {
                "displayName": "Effect",
                "description": "Enable or disable the execution of the policy"
              },
              "allowedValues": [
                "Audit",
                "Deny",
                "Disabled"
              ],
              "defaultValue": "Audit"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.MachineLearningServices/workspaces"
                },
                {
                  "count": {
                    "field": "Microsoft.MachineLearningServices/workspaces/privateEndpointConnections[*]",
                    "where": {
                      "field": "Microsoft.MachineLearningServices/workspaces/privateEndpointConnections[*].privateEndpoint.id",
                      "notContains": "[subscription().id]"
                    }
                  },
                  "greaterOrEquals": 1
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          }
        }
      }
    }
  }
}
